<?php

/**
 * @file
 * Hook implementations for the SimpleAVS module.
 */

declare(strict_types=1);

/**
 * Implements hook_page_attachments().
 *
 * Thin shim that forwards to the service-based implementation.
 */
function simpleavs_page_attachments(array &$attachments): void {
  \Drupal::service('simpleavs.hooks')->pageAttachments($attachments);
}
